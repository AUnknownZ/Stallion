/* pages/reward/index.wxss */
.container {
  padding: 20rpx;
}

.points-section {
  margin-bottom: 20rpx;
}

.points-text {
  font-size: 36rpx;
  font-weight: bold;
}

.rewards-section, .user-stock-section {
  margin-bottom: 40rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.reward-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  border: 1px solid #ddd;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
  background-color: #fff;
}

.reward-image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.reward-info {
  display: flex;
  flex-direction: column;
}

.reward-name {
  font-size: 30rpx;
  font-weight: bold;
}

.reward-points {
  font-size: 24rpx;
  color: #999;
}

.reward-count {
  font-size: 24rpx;
  color: #333;
}

.custom-toast {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  background-color: rgba(0, 0, 0, 0.7);
  color: #fff;
  padding: 20rpx;
  border-radius: 10rpx;
  font-size: 32rpx;
  transition: opacity 0.3s ease;
  opacity: 0;
}

.custom-toast.show {
  opacity: 1;
}

.custom-toast.hide {
  opacity: 0;
}