/* pages/admin/admin.wxss */
.page_container {
  padding: 20px;
  background-color: #f9f9f9;
}

.form_section {
  margin-bottom: 20px;
  padding: 15px;
  border: 1px solid #ddd;
  border-radius: 5px;
  background-color: #fff;
}

.form_title {
  font-size: 18px;
  font-weight: bold;
  margin-bottom: 10px;
}

input {
  display: block;
  width: 100%;
  padding: 8px;
  margin-bottom: 10px;
  border: 1px solid #ccc;
  border-radius: 5px;
}

button {
  display: block;
  width: 100%;
  padding: 10px;
  background-color: #007aff;
  color: white;
  border: none;
  border-radius: 5px;
  font-size: 16px;
}

.picker {
  margin: 10px 0;
  padding: 10px;
  background-color: #007aff;
  color: white;
  border-radius: 5px;
  text-align: center;
  font-size: 16px;
}
