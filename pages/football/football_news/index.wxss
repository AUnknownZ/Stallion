/* pages/football/football_news/index.wxss */
.container {
  padding: 20px;
}

.section {
  margin-bottom: 30px;
}

.section-title {
  font-size: 24px;
  font-weight: bold;
  margin-bottom: 10px;
}

.news-list {
  background-color: #f9f9f9;
  padding: 10px;
  border-radius: 5px;
}

.news-item {
  margin-bottom: 10px;
  padding: 15px;
  background-color: #ffffff;
  border: 1px solid #ddd;
  border-radius: 5px;
  transition: transform 0.2s;
}

.news-item:hover {
  transform: scale(1.02);
}

.news-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 5px;
}

.news-title {
  font-size: 18px;
  font-weight: bold;
}

.news-date {
  font-size: 14px;
  color: #888;
}

.news-description {
  font-size: 16px;
}
